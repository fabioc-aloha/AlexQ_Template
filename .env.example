# Qualtrics API Configuration
# Copy this file to .env and fill in your actual values
# NEVER commit .env to source control!

# Qualtrics API Settings
QUALTRICS_API_TOKEN=your_qualtrics_api_token_here
QUALTRICS_DATACENTER=iad1
QUALTRICS_BRAND_ID=your_brand_id_here

# Azure Key Vault (for production - stores Qualtrics token securely)
AZURE_KEY_VAULT_NAME=your-keyvault-name
QUALTRICS_TOKEN_SECRET_NAME=QualtricsApiToken

# Azure Cosmos DB
AZURE_COSMOS_DB_ENDPOINT=https://your-cosmosdb-account.documents.azure.com:443/
AZURE_COSMOS_DB_KEY=your_cosmos_db_key_here_or_use_managed_identity
AZURE_COSMOS_DB_DATABASE_NAME=DispositionDashboard
AZURE_COSMOS_DB_CONTAINER_NAME=DistributionSnapshots

# Azure SignalR Service
AZURE_SIGNALR_CONNECTION_STRING=Endpoint=https://your-signalr.service.signalr.net;AccessKey=...;Version=1.0;

# Azure Service Bus (optional - for webhook processing)
AZURE_SERVICE_BUS_CONNECTION_STRING=Endpoint=sb://your-servicebus.servicebus.windows.net/;...
AZURE_SERVICE_BUS_QUEUE_NAME=qualtrics-webhooks

# Azure Application Insights
APPLICATIONINSIGHTS_CONNECTION_STRING=InstrumentationKey=your-key;IngestionEndpoint=https://...

# Application Settings
ASPNETCORE_ENVIRONMENT=Development
POLLING_INTERVAL_SECONDS=60
MAX_CONCURRENT_POLLS=5
ENABLE_WEBHOOKS=false

# Webhook Configuration (if enabled)
WEBHOOK_BASE_URL=https://your-app.azurewebsites.net
WEBHOOK_SECRET=your_webhook_hmac_secret_here

# Rate Limiting Configuration
QUALTRICS_RATE_LIMIT_REQUESTS_PER_MINUTE=3000
RATE_LIMIT_RETRY_MAX_ATTEMPTS=3
RATE_LIMIT_RETRY_DELAY_SECONDS=60

# Logging
LOG_LEVEL=Information
ENABLE_DETAILED_ERRORS=true

# Development/Testing Settings
USE_LOCAL_EMULATOR=false
COSMOS_DB_EMULATOR_ENDPOINT=https://localhost:8081/
COSMOS_DB_EMULATOR_KEY=C2y6yDjf5/R+ob0N8A7Cgv30VRDJIWEHLM+4QDU5DE2nQ9nDuVTqobD4b8mGGyPMbIZnqyMsEcaGQy67XIw/Jw==

# Survey Configuration (comma-separated for multiple surveys)
MONITORED_SURVEY_IDS=SV_123456789abcdef,SV_987654321fedcba

# Data Retention
DATA_RETENTION_DAYS=365
CLEANUP_ENABLED=true
CLEANUP_SCHEDULE_CRON=0 2 * * *

# Feature Flags
ENABLE_ANOMALY_DETECTION=false
ENABLE_EMAIL_ALERTS=false
ENABLE_MULTI_SURVEY_COMPARISON=true

# Azure AD Authentication (future)
AZURE_AD_TENANT_ID=your-tenant-id
AZURE_AD_CLIENT_ID=your-client-id
AZURE_AD_CLIENT_SECRET=your-client-secret

# Performance Tuning
COSMOS_DB_MAX_RU_THRESHOLD=1000
SIGNALR_SCALE_UNITS=1
HTTP_CLIENT_TIMEOUT_SECONDS=30
